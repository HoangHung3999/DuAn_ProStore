<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_product" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginStart="12dp"
            android:text="Tên sản phẩm"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="99,000đ"
            android:textColor="#FF5722"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPrice"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Số lượng: 10"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvQuantity"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Ngày: 06/08/2025"
            android:textSize="13sp"
            android:textColor="#666666"
            android:visibility="gone" />



        <!-- Nút Sửa -->

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_button_circle"
            android:padding="6dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Xóa sản phẩm"
            android:scaleType="centerInside" />




        <!-- Nút Xóa -->
        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/btnEdit"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_button_circle"
            android:padding="6dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="Xóa sản phẩm"
            android:scaleType="centerInside" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
